{
    "appId": "com.amrpc.beta",
    "productName": "AMRPC-BETA",
    "artifactName": "AMRPC-BETA.${ext}",
    "copyright": "Copyright Â© 2021 N0chteil Productions",
    "asar": "true",
    "asarUnpack": [
        "node_modules/itunes-bridge/wscript",
        "node_modules/itunes-bridge/jxa",
        "covers.json"
    ],
    "extraResources": [
        "assets/logo.png",
        "assets/tray/"
    ],
    "directories": {
        "buildResources": "assets",
        "output": "app/beta"
    },
    "publish": {
        "provider": "s3",
        "bucket": "com-amrpc-beta"
    },
    "nsis": {
        "createDesktopShortcut": "always"
    },
    "win": {
        "target": "nsis",
        "icon": "assets/icons/win/icon.ico",
        "artifactName": "AMRPC-BETA-Installer.exe",
        "publish": ["github"]
    },
    "mac": {
        "category": "public.app-category.utilities",
        "icon": "assets/icons/mac/icon.icns"
    }
}