{
    "appId": "com.zephra.amrpc",
    "productName": "AMRPC",
    "artifactName": "AMRPC.${ext}",
    "copyright": "Copyright Â© 2022 zephra",
    "protocols": [
        {
            "name": "AMRPC",
            "schemes": ["amrpc"]
        }
    ],
    "asar": true,
    "asarUnpack": ["node_modules/apple-bridge/dist/darwin/osascript/"],
    "directories": {
        "app": "dist",
        "buildResources": "src/assets",
        "output": "app/macos"
    },
    "files": [
        "**/*",
        "dist/assets/app",
        "dist/assets/icons",
        "dist/assets/tray",
        "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
        "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
        "!**/node_modules/*.d.ts",
        "!**/node_modules/.bin",
        "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
        "!.editorconfig",
        "!**/._*",
        "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
        "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
        "!**/{appveyor.yml,.travis.yml,circle.yml}",
        "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "dmg": {
        "window": {
            "width": 660,
            "height": 400
        },
        "contents": [
            {
                "x": 180,
                "y": 170
            },
            {
                "x": 480,
                "y": 170,
                "type": "link",
                "path": "/Applications"
            }
        ],
        "title": "AMRPC",
        "writeUpdateInfo": false
    },
    "mac": {
        "icon": "src/assets/icons/darwin/icon.icns",
        "target": {
            "target": "default",
            "arch": ["x64", "arm64"]
        },
        "artifactName": "AMRPC-Installer-macOS-${arch}.${ext}",
        "publish": {
            "provider": "github",
            "releaseType": "draft"
        },
        "darkModeSupport": true
    }
}
