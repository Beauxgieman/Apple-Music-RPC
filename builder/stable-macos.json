{
	"appId": "com.zephra.amrpc",
	"productName": "AMRPC",
	"artifactName": "AMRPC.${ext}",
	"copyright": "Copyright Â© 2022 zephra",
	"protocols": [
		{
			"name": "AMRPC",
			"schemes": [
				"amrpc"
			]
		}
	],
	"asar": "true",
	"asarUnpack": [
		"node_modules/itunes-bridge/wscript",
		"node_modules/itunes-bridge/jxa",
		"modals.js",
		"language/"
	],
	"directories": {
		"buildResources": "assets",
		"output": "app/stable/macos"
	},
	"files": [
		"node_modules/",
		"language/",
		"assets/",
		"browser/",
		"managers/",
		"utils/",
		"*.js",
		"*.html",
		"*.css",
		"!node_modules/.cache/"
	],
	"dmg": {
		"window": {
			"width": 660,
			"height": 400
		},
		"contents": [
			{
				"x": 180,
				"y": 170
			},
			{
				"x": 480,
				"y": 170,
				"type": "link",
				"path": "/Applications"
			}
		],
		"title": "Discord RPC for Apple Music",
		"writeUpdateInfo": false
	},
	"mac": {
		"icon": "assets/icons/mac/icon.icns",
		"target": {
			"target": "default",
			"arch": [
				"x64",
				"arm64"
			]
		},
		"artifactName": "AMRPC-Installer-macOS-${arch}.${ext}",
		"publish": {
			"provider": "github",
			"releaseType": "draft"
		}
	}
}